<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for force stopping apps -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:name="com.nomor.memoryclear.NoMoreAppsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.NoMoreApps"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name="com.nomor.memoryclear.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NoMoreApps"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Whitelist Activity -->
        <activity
            android:name="com.nomor.memoryclear.WhitelistActivity"
            android:exported="false"
            android:theme="@style/Theme.NoMoreApps"
            android:screenOrientation="portrait" />

        <!-- Running Apps Activity -->
        <activity
            android:name="com.nomor.memoryclear.RunningAppsActivity"
            android:exported="false"
            android:theme="@style/Theme.NoMoreApps"
            android:screenOrientation="portrait" />

        <!-- Settings Activity -->
        <activity
            android:name="com.nomor.memoryclear.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.NoMoreApps"
            android:screenOrientation="portrait" />

        <!-- Error Log Activity -->
        <activity
            android:name="com.nomor.memoryclear.ErrorLogActivity"
            android:exported="false"
            android:theme="@style/Theme.NoMoreApps"
            android:screenOrientation="portrait" />

        <!-- Analyze Activity -->
        <activity
            android:name="com.nomor.memoryclear.AnalyzeActivity"
            android:exported="false"
            android:theme="@style/Theme.NoMoreApps"
            android:screenOrientation="portrait" />

        <!-- Accessibility Service for force stopping apps -->
        <service
            android:name="com.nomor.memoryclear.ForceStopAccessibilityService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Floating Dock Service -->
        <service
            android:name="com.nomor.memoryclear.FloatingDockService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

        <!-- Schedule Service -->
        <service
            android:name="com.nomor.memoryclear.ScheduleService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Boot Receiver -->
        <receiver
            android:name="com.nomor.memoryclear.BootReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

    </application>
</manifest>